<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="300dp"
       android:background="@drawable/accountdrawable">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:text="PROFILE"
           android:textColor="@color/white1"
           android:textSize="27sp"
           android:textStyle="bold"/>
       <ImageView
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:layout_centerInParent="true"
           android:src="@drawable/user"
           android:id="@+id/acctImage"
           android:scaleType="centerCrop"/>

       <TextView
           android:id="@+id/acctUserName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/acctImage"
           android:layout_centerInParent="true"
           android:layout_marginTop="4dp"
           android:padding="2dp"
           android:text="Caesar The Coder"
           android:textColor="@color/white1"
           android:textSize="18sp"
           android:textStyle="bold" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_below="@id/acctUserName"
           android:layout_marginTop="4dp"
           android:text="caesar@gmail.com"
           android:textColor="@color/white1"
           android:id="@+id/actGmail"
           android:padding="2dp"/>
   </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                android:layout_marginTop="4dp">
              <Button
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:backgroundTint="@color/white1"
                  android:text="Order Summary"
                  android:textStyle="bold"
                  android:layout_marginTop="4dp"
                  android:textColor="@color/black"
                  android:textSize="22sp"
                  android:id="@+id/acctOrderSum"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white1"
                    android:text="Account Management"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/acctManagement"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white1"
                    android:text="Contact Us"

                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/contactUs"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white1"
                    android:text="Delete Account"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/DeleteAccount"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white1"
                    android:text="LOG OUT"
                    android:textStyle="bold"
                    android:layout_marginTop="7dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:id="@+id/LogOut"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
</LinearLayout>
</RelativeLayout>